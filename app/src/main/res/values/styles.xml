<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#B0300D</item>
        <item name="colorPrimaryDark">#5F0000</item>
        <!-- Looking to turn background under colorPrimary black <item name="color">#040603</item> -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="number_question">
        <item name="android:layout_width"> wrap_content </item>
        <item name="android:layout_height"> wrap_content </item>
        <item name="android:layout_marginTop"> 8dp </item>
        <item name="android:paddingTop"> 18dp </item>
        <item name="android:paddingLeft"> 16dp </item>
        <item name="android:paddingBottom"> 6dp </item>
        <item name="android:textSize"> 22sp </item>
        <item name="android:textStyle"> bold </item>
    </style>

    <style name="answer">
        <item name="android:layout_width"> wrap_content </item>
        <item name="android:layout_height"> wrap_content </item>
        <item name="android:layout_centerHorizontal"> true </item>
        <item name="android:layout_gravity"> center </item>
        <item name="android:textSize"> 16sp </item>
        <item name="android:textStyle"> italic </item>
    </style>

    <style name="question">
        <item name= "android:layout_width"> wrap_content </item>
        <item name= "android:layout_height"> wrap_content </item>
        <item name= "android:layout_marginBottom"> 32dp </item>
        <item name= "android:paddingRight"> 8dp </item>
        <item name= "android:paddingLeft"> 8dp </item>
        <item name= "android:gravity"> center_vertical|center </item>
        <item name="android:textSize"> 22sp </item>
        <item name="android:textStyle"> bold </item>
    </style>

</resources>